@model MalMaalayak.Models.ClientDetailClassModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <main role="main" class="probootstrap-main js-probootstrap-main col-lg-pull-1">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {

                <div class="probootstrap-bar">
                    <a href="#" class="probootstrap-toggle js-probootstrap-toggle"><span class="oi oi-menu"></span></a>
                    <div class="probootstrap-main-site-logo"><a href="index.html">Aside</a></div>
                </div>

            for (int c = 0; c < Model.ClientList.Count; c+=4)

            {
                <div class="row">
                    @foreach (ClientDetail cd in Model.ClientList.Skip(c).Take(4))
                    {

                        <div class="col-lg-3 col-md-6 mb-4" >
                            <div class="card" style="width: 15rem;" >
                                @*<div class="h-50 d-inline-block">*@
                                <div>
                                    <img class="card-img-top" src="~/images/img_1.jpg" alt="Card image cap">
                                </div>
                                <div class="card-body ">
                                    <h4 class="card-title">Card title</h4>
                                    <p class="card-text" style="line-height:10px">@cd.StarId</p>
                                    <p class="card-text" style="line-height:10px"><small class="text-muted">@cd.Job</small></p>
                                    <p class="card-text" style="line-height:10px">@cd.GenderId</p>
                                    <p class="card-text" style="line-height:10px">@cd.CapptId</p>
                                    @*<a href="@Url.Action("GetMoreDetails", "Couple")" class="btn btn-primary">More Detail</a>*@
                                </div>
                                <div class="card-footer">
                                    <a href="@Url.Action("GetMoreDetails", "Couple")" class="btn btn-primary">More</a>
                                </div>
                                @*</div>*@
                            </div>
                        </div>
                       
                    }
                </div>
            }
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        @for (int i = 1; i <= Model.PageCount; i++)
                {
                            <td>
                                @if (i != Model.CurrentPageIndex)
                                {
                                    <a href="javascript:PagerClick(@i);">@i</a>
                                }
                                else
                                {
                                    <span>@i</span>
                                }
                            </td>
                        }
                    </tr>
                </table>
                <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />


                <div class="container-fluid d-md-none">
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="list-unstyled d-flex probootstrap-aside-social">
                                <li><a href="#" class="p-2"><span class="icon-twitter"></span></a></li>
                                <li><a href="#" class="p-2"><span class="icon-instagram"></span></a></li>
                                <li><a href="#" class="p-2"><span class="icon-dribbble"></span></a></li>
                            </ul>
                            <p>&copy; 2017 <a href="https://probootstrap.com/" target="_blank">ProBootstrap:Aside</a>. <br> All Rights Reserved. Designed by <a href="https://probootstrap.com/" target="_blank">ProBootstrap.com</a></p>
                        </div>
                    </div>
                </div>

            }
       

</main>





    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("hfCurrentPageIndex").value = index;
            document.forms[0].submit();
        }
    </script>

</body>
</html>
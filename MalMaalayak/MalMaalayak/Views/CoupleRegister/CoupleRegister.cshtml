<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
</head>
<body>
    <main role="main" class="probootstrap-main js-probootstrap-main col-lg-pull-1">

        @using (Html.BeginForm("SaveCoupleDetail", "CoupleRegister", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (Model.Id != 0)
            {
                @Html.HiddenFor(model => model.Id)
            }
            @Html.AntiForgeryToken() <!-- form user info -->
            <div class="card card-outline-secondary">
                <div class="card-header">
                    <h3 class="mb-0">User Information</h3>
                </div>
                <div class="card-body">
                    <form class="form" role="form" autocomplete="off">
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.FirstName)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.FirstName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.LastName)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.LastName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.GenderType)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.GenderType)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Religion)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.Religion)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.NIC)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.NIC)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Job)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Job)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Height)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Height)
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.CasteName)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.CasteName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.StarName)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.StarName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Lagna)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.Lagna)

                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Qualification)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.Qualification)
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.BirthOfDate)
                            </div>
                            <div class="col-lg-9 ">

                                <div class='input-group date' id='datetimepicker6'>
                                    @Html.EditorFor(model => model.BirthOfDate, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>

                                @* @Html.EditorFor(model => model.BirthOfDate, new { htmlAttributes = new { @class = "form-control datetimepicker" } })*@
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.BirthPlace)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.BirthPlace)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.BirthTime)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.BirthTime)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Paavam)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Paavam)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.FartherPlace)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.FartherPlace)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.MotherPlace)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.MotherPlace)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Address)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Address)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Residence)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Residence)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Country)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.Country)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.HomePhone)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.HomePhone)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.MobileNo)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.MobileNo)
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Email)
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.Expectation)
                            </div>
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(model => model.Expectation)
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.LagnaChart)
                            </div>
                            <div class="col-lg-9">
                                <input type="file" name="UploadLagna" />
                                @*@Html.TextBoxFor(model => model.FirstName)*@
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-3">
                                @Html.DisplayNameFor(model => model.NavamsaChart)
                            </div>
                            <div class="col-lg-9">
                                <input type="file" name="UploadNawamsa"/>
                                @*@Html.TextBoxFor(model => model.FirstName)*@
                            </div>
                        </div>





                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">

                                @if (Model.Id == 0)
                                {
                                    <input type="submit" class="btn btn-primary" value="Save">
                                }
                                else
                                {
                                    <input type="submit" class="btn btn-primary" value="Update">
                                }

                                @*<button type="button" class="btn btn-primary" id="btnAdd" onclick="return SaveCoupleDetail();">Save</button>*@
                                @*<input type="submit" class="btn btn-primary" value="Save">*@
                                @*<a href="@Url.Action("SaveCoupleDetail", "CoupleRegister")" class="btn btn-primary">Save</a>*@
                                <input type="reset" class="btn btn-secondary" value="Clear">

                            </div>
                            <div class="col-lg-offset-9">
                                <input type="button" class="btn btn-danger" value="Add Chart">
                            </div>

                        </div>

                    </form>
                </div>
            </div>


            <!-- /form user info -->

        }
    </main>
</body>
</html>


